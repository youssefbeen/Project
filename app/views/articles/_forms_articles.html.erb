
 
<%= render 'shared/errors', obj: @article %>

<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
       <div class="col-sm-2 control-label">
           <%= f.label :title %>
   </div>
    <div class="col-sm-10">
     <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
       <div class="col-sm-2 control-label">
           <%= f.label :description %>
   </div>
    <div class="col-sm-10">
     <%= f.text_area :description, class: "form-control", placeholder: "Description", rows: 10%>
    </div>
  </div>
  <div class="form-group">
       <div class="col-sm-2 control-label">
           <%= f.label :title %>
   </div>
    <div class="col-sm-10">
     <%= f.text_field :price, class: "form-control", placeholder: "Price" %>
    </div>
    <div class="col-sm-10">
    <%= f.fields_for :pictures do |g| %>
    
     <%= g.file_field :picture, :multiple => true, class: "form-control", name: "pictures[picture][]", placeholder: "picture" %>
    <% end %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
         <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end %>
