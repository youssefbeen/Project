<div class="page-header">
  <h1 align="center">Information Utilisateur</h1>
</div>





<div class="container">
    <div class="row">
        <div class="col-md-4">Username</div>
        <div class="col-md-8"><%= @user.username %></div>
    </div>
    <div class="row">
<div class="col-md-4">Email</div>
        <div class="col-md-8"><%= @user.email %></div>
    </div>

    <div class="row">
      <div class="col-md-4">Phone</div>
        <div class="col-md-8">
           <%= @user.tel %>
        </div>
        <br><br>
        <div class="col-md-8"><%= link_to "Modifier", edit_user_path(@user), class: "btn btn-default" %>
        <%= link_to "Suppriner compte", user_path(@user), class: "btn btn-danger", method: :delete, data: {confirm: "Are u sure?"}  %></div>
    </div>
    <br><br>
    <button class="btn btn-default"><%=link_to "Acceuil", root_path %> </button>
</div>
