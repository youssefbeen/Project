<div class="page-header">
  <h1 align="center">Edit User</h1>
</div>


<%= form_for(@user, :html => {class: "form-horizontal", id: "register-form", role: "form"}) do |f| %>
 
  <div class="form-group">
       <div class="col-md-2 col-sm-2 col-xs-4 control-label">
           <%= f.label "Nom:" %>
   </div>
    <div class="col-md-6 col-sm-6  ">
     <%= f.text_field :username, id:"username", class: "form-control", placeholder: "Nom complet", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
       <div class="col-md-2 col-sm-2 col-xs-4 control-label">
           <%= f.label "Telephone" %>
   </div>
    <div class="col-md-6 col-sm-6  ">
     <%= f.phone_field :tel, class: "form-control", placeholder: "06..."%>
    </div>
  </div>
  <div class="form-group">
       <div class="col-md-2 col-sm-2 col-xs-4 control-label">
           <%= f.label :email %>
   </div>
    <div class="col-md-6 col-sm-6   ">
     <%= f.email_field :email, class: "form-control", placeholder: "E-mail", rows: 10%>
    </div>
  </div>
  <%= f.submit %>
<%end %>