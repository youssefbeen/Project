
 

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  
  <div class="form-group">
       <div class="col-sm-2 control-label">
           <%= f.label :email %>
   </div>
    <div class="col-sm-10">
     <%= f.email_field :email, class: "form-control", placeholder: "E-mail", rows: 10, autofocus: true %>
    </div>
  </div>
  <div class="form-group">
       <div class="col-sm-2 control-label">
           <%= f.label :password %>
   </div>
    <div class="col-sm-10">
     <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-1">
         <%= f.submit 'Login', class: "btn btn-default" %>
    </div>
    <div class="col-sm-1">
         <button class="btn btn-default"><%= link_to "Sign Up", signup_path%></button>
    </div>
  </div>
<% end %>
